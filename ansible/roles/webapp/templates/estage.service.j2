[Unit]
Description=demon for estage
Documentation=https://springboot.com/
After=syslog.target network.target

[Service]
SuccessExitStatus=143
Type=simple
User=root
##Group=root
##LimitNOFILE=infinity
##LimitNPROC=infinity
##LimitCORE=infinity
##WorkingDirectory=/usr/local/gestexam
Environment=JAVA_HOME=/usr/lib/jvm/jre-11-openjdk
ExecStart=/usr/lib/jvm/jre-11-openjdk/bin/java -jar /usr/local/gestexam/gestion-examen.jar --spring.config.location=file:///etc/gestexam/application.properties --spring.profiles.active=prod
ExecStop=/bin/kill -15 $MAINPID


[Install]
WantedBy=multi-user.target
